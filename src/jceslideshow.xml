<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.8" group="fields" method="upgrade">
	<name>plg_fields_jceslideshow</name>
	<version>1.1</version>
  	<creationDate>04-05-2020</creationDate>
  	<author>Bruce Scherzinger</author>
  	<authorEmail>joomlander@scherzinger.org</authorEmail>
  	<authorUrl>https://github.com/bascherz</authorUrl>
  	<copyright>Copyright (C) 2020 Bruce Scherzinger. All rights reserved</copyright>
  	<license>GNU/GPL Version 2 or later - http://www.gnu.org/licenses/gpl-2.0.html</license>
	<description>JCE Slideshow Custom Field Plugin</description>
	<files folder="plugins/fields/jceslideshow">
		<filename plugin="jceslideshow">jceslideshow.php</filename>
		<folder>params</folder>
		<folder>tmpl</folder>
		<folder>fields</folder>
	</files>
	<languages folder="administrator/language/en-GB">
		<language tag="en-GB">en-GB.plg_fields_jceslideshow.ini</language>
		<language tag="en-GB">en-GB.plg_fields_jceslideshow.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="moreinfo"
					type="note"
					class="alert alert-info"
					description="PLG_FIELDS_JCESLIDESHOW_XML_DESCRIPTION"
				/>
			</fieldset>
		</fields>
	</config>
    <updateservers>
        <server type="extension" name="JCE Slideshow Custom Field Plugin Update Site">https://raw.githubusercontent.com/bascherz/JCE-Slideshow-Custom-Field-Plugin/master/manifest.xml</server>
    </updateservers>
</extension>
